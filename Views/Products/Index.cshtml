@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchString">Search by Name:</label>
        <input type="text" class="form-control" id="searchString" name="searchString" value="@ViewData["searchString"]">
    </div>
    <div class="form-group">
        <label for="categoryId">Category:</label>
        @Html.DropDownList("categoryId", (SelectList)ViewData["idCategory"], "All Categories", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="firmId">Firm:</label>
        @Html.DropDownList("firmId", (SelectList)ViewData["idFirm"], "All Firms", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="supplierId">Supplier:</label>
        @Html.DropDownList("supplierId", (SelectList)ViewData["idSupplier"], "All Suppliers", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firm.firm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.supplier)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idProduct">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.idProduct">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.idProduct">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
