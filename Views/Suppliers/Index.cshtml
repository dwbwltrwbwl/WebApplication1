@model IEnumerable<WebApplication1.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 style="color: #94a728;">Поставщики</h1>
    <a asp-action="Create" class="btn btn-success" style="font-weight: bold; background-color: #94a728; color: white;">Добавить</a>
</div>

<table class="table">
    <thead></thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.supplier)
            </td>
            <td style="text-align: right;">
                <a asp-action="Edit" asp-route-id="@item.idSupplier" style="color: #28a745;">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@item.idSupplier" style="color: #28a745;">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
